<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.2.3"
	client="site"
	method="upgrade">
	<name>JoomSport moderator</name>
	<author>BearDev</author>
	<creationDate>May 2014</creationDate>
	<copyright>Copyright (C)2009-2014 BearDev. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>beardev@beardev.com</authorEmail>
	<authorUrl>www.beardev.com</authorUrl>
	<version>3.2.3</version>
	<description>JoomSport moderator</description>
	<languages folder="language">
	   <language tag="de-DE">de-DE/de-DE.mod_js_moder.ini</language>
	   <language tag="en-GB">en-GB/en-GB.mod_js_moder.ini</language>
	   <language tag="el-GR">el-GR/el-GR.mod_js_moder.ini</language>
	   <language tag="es-ES">es-ES/es-ES.mod_js_moder.ini</language>
	   <language tag="fr-FR">fr-FR/fr-FR.mod_js_moder.ini</language>
	   <language tag="hu-HU">hu-HU/hu-HU.mod_js_moder.ini</language>
	   <language tag="it-IT">it-IT/it-IT.mod_js_moder.ini</language>
	   <language tag="nl-NL">nl-NL/nl-NL.mod_js_moder.ini</language>
	   <language tag="pl-PL">pl-PL/pl-PL.mod_js_moder.ini</language>
	   <language tag="pt-PT">pt-PT/pt-PT.mod_js_moder.ini</language>
	   <language tag="ru-RU">ru-RU/ru-RU.mod_js_moder.ini</language>
	   <language tag="sv-SE">sv-SE/sv-SE.mod_js_moder.ini</language>
	</languages>
	
	<files>
		<filename module="mod_js_moder">mod_js_moder.php</filename>
		<filename module="mod_js_moder">helper.php</filename>
		<filename module="mod_js_moder">tmpl/default.php</filename>
		<filename module="mod_js_moder">css/mod_js_moder.css</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_joomsport/fields">
				<field name="customitemid" type="text" default="0" label="MOD_JS_SETITEMID" description="MOD_JS_TT_SETITEMID" />
				<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
	<params addpath="/administrator/components/com_joomsport/elements">
		<param name="customitemid" type="text" default="0" label="MOD_JS_SETITEMID" description="MOD_JS_TT_SETITEMID" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	
</extension>
